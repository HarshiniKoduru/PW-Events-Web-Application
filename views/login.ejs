<!DOCTYPE html>
<html>
    <head>
	<meta charset="utf-8">
        <title>PW Login</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="assets/CSS/main.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <% include partials/navigation.ejs %>
  <div class="login-content">
      <div class="opq">
      </div>
      <div class="form_background">

     <form id="connection-form" method="Post" action='/login'>
       <p style="color:black;">Login to your Profile </p><br><br>
       <%
    if(error){
    error.forEach(function(item){%>
        <p style="color:red;"><%=item.msg %></p>
        <%});} %>
        <%if(valid){%>
          <p style="color:red;">    Username or Password is Not valid </p>
        <%}%>
       <div>
       <label for="emailAddress">Email:  &nbsp; </label>
       <input id="emailAddress" type="email" name="emailAddress">
     </div>
     <div>
       <label for="password">Password:</label>
       <input id="password" type="password" name="password">
     </div>
       <br><button>Submit</button>
     </form>
     <br/>
   </div>
   </div>
<% include partials/footer.ejs %>
</body>

</html>
