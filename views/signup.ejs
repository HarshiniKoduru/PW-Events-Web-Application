<!DOCTYPE html>
<html>
    <head>
	<meta charset="utf-8">
        <title>Sign UP</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="assets/CSS/main.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <% include partials/navigation.ejs %>

<div class="form_css">
<h3 class="signup_head">NEW USER? SIGN UP here</h3>
  <form id="newConnection-form" method="POST" action="signup">
    <%
   if(error){
   error.forEach(function(item){%>
       <p class="err-msg"><%=item.msg %></p>
       <%});} %>
    <div class="row">
      <div class="column1">
         <label for="userid">User ID</label>
      </div>
      <div class="column2">
        <input type="text" id="userid" name="userid" placeholder="Your user id..">
      </div>
    </div>
    <div class="row">
      <div class="column1">
        <label for="fname">First Name</label>
      </div>
      <div class="column2">
        <input type="text" id="fname" name="fname" placeholder="Your first name..">
      </div>
    </div>

    <div class="row">
      <div class="column1">
        <label for="lname">Last Name</label>
      </div>
      <div class="column2">
        <input type="text" id="lname" name="lname" placeholder="Your last name..">
      </div>
    </div>

    <div class="row">
      <div class="column1">
        <label for="email">Email Id</label>
      </div>
      <div class="column2">
        <input type="email" id="email" name="email" placeholder="Your Email..">
      </div>
    </div>

    <div class="row">
      <div class="column1">
        <label for="address1Field">Address Line1</label>
      </div>
      <div class="column2">
        <textarea name="address1Field" placeholder="Address Field 1"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="column1">
        <label for="address2Field">Address Line2</label>
      </div>
      <div class="column2">
        <textarea name="address2Field" placeholder="Address Field 2"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="column1">
        <label for="city">City</label>
      </div>
      <div class="column2">
        <input type="text" id="city" name="city" placeholder="City">
      </div>
    </div>
    <div class="row">
      <div class="column1">
        <label for="state">State</label>
      </div>
      <div class="column2">
        <input type="text" id="state" name="state" placeholder="State">
      </div>
    </div>
    <div class="row">
      <div class="column1">
        <label for="postcode">Postal Code</label>
      </div>
      <div class="column2">
        <input type="number" id="postcode" name="postcode" placeholder="Postal Code">
      </div>
    </div>
    <div class="row">
      <div class="column1">
        <label for="password">Password</label>
      </div>
      <div class="column2">
        <input type="password" id="password" name="password" placeholder="Password">
      </div>
    </div>
    <div class="row">
      <input type="submit" value="Sign Up">
    </div>
  </form>
</div>
        <% include partials/footer.ejs %>
</body>
</html>
